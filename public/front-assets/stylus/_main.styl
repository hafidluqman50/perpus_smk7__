
#panduan
    h1
        &.title
            padding 10px 15px
            display inline-block
            margin-bottom 35px
            border-bottom 1px solid #fff

.center-slide
    div
        padding 10px
        & > h5
            margin 10px 0
            font-weight 600
        & > p
            font-size 14px
            text-align justify
    img
        height 350px
        width 100%

#petugas
    figure
        z-index 2
        position relative
        & > img
            height 450px
            fill none
        &::before
            content ''
            width 100%
            height 100%
            display inline-block
            background-color #141e30
            position absolute
            top 7px
            left 7px
            opacity 0.7
            z-index -1
    figcaption
        padding 10px 0
        background-color #141e30
        position absolute
        bottom 0
        left 0
        right 0
        text-align center
        & > p
            &:nth-of-type(1)
                border-bottom 1px solid #00d1b2
                padding 5px 0
                display inline-block
                margin-bottom 30px
    div
        &.column
            &:nth-of-type(3)
                & > div
                    position relative
                    top 150px
                    bottom 0
