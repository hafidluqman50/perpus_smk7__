#nav
    padding 15px 0
    position absolute
    width 100%
    z-index 999
    background none
    background-color none
    img
        display none
    li
        display inline-block
        & > a
            color #fff
            text-transform uppercase
            font-weight 500
            font-size 12px
            text-decoration none
            margin 0 15px
            vertical-align middle
            line-height 100px
            &.navbar-item
                &:hover
                    opacity 0.7
                    background none
    ul
        & > div
            &:nth-of-type(1)
                text-align right
    .brands
        display block!important
        position absolute
        width 100%
        & > img
            position absolute
            left 0
            right 0
            top -10px
            margin 0 auto
    .navbar-item
        padding 0!important
    .logo
        line-height 0
        & > a
            background url('../img/cie.svg')no-repeat
            width 159px
            height 108px
            display inline-block
            text-indent -9999px
            margin 0!important
            position relative
            &::before
                content ''
                width 1px
                height 100%
                top 0
                left -20px
                transform rotate(20deg)
                background-color #00d1b2
                position absolute
            &::after
                content ''
                width 1px
                height 100%
                top 0
                right -20px
                transform rotate(20deg)
                background-color #00d1b2
                position absolute