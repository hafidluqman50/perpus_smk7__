.is-borrow
	background #e74c3c
	color whitesmoke
	border 1px solid #e74c3c
	&:focus
		color whitesmoke
		border 1px solid #e74c3c
	&:hover
		color whitesmoke
		background #c0392b
		border 1px solid #e74c3c

.new-tag
	display flex

.tag-kategori
	margin 6px 2px 0 0px
	display inline-block
	padding-top 2px
	text-overflow ellipsis
	overflow hidden
	width 50%
	text-align center
	white-space nowrap

.tag-sub-ktg
	margin 6px 0px 0 2px
	display inline-block
	padding-top 2px
	text-overflow ellipsis
	overflow hidden 
	width 50%
	text-align center 
	white-space nowrap
	
.tag-small
	width 40%
	
.text-white
	color white!important
	
.text-black
	color black!important
	
.is-notif
	background #00d1b2
	color whitesmoke
	border 1px solid #00d1b2
	
.is-error
	background #e74c3c
	color whitesmoke
	border 1px solid #e74c3c
		
.show
	position fixed
	right -50%
	z-index 999
	top 0
	transition all 0.3s ease
	
.error
	position fixed
	right -50%
	z-index 999
	top 0
	transition all 0.3s ease
	
.error-box
	display none
	position relative!important
	margin 20px 0 0
	font-size 14px
	border-radius 0
	> div
		min-width 250px
		width 300px
		padding 0
		color #fff
		margin 10px 0
	i
		color #fff
	.column
		&:nth-of-type(1)
			background-color rgba(20,30,48,0.1)
			vertical-align middle
			padding 20px 12px

.loading-page
	display none
	width 100%
	height 100%
	background #ecf0f1!important
	position fixed
	z-index 9999
	top 0
	> span
		position fixed
		top 50%
		left 20%
		
.custom-click
	cursor pointer
	margin-top 2%
	