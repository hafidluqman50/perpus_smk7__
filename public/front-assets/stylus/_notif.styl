#wrap-notif
    position fixed
    right -50%
    z-index 999
    top 0
    display none
    transition all 0.3s ease
#notif
.wish-box
    display none
    position relative!important
    margin 20px 0 0
    font-size 14px
    border-radius 0
    & > div
        min-width 250px
        width 300px
        padding 0
        color #fff
        margin 10px 0
    i
        color #fff
    .column
        &:nth-of-type(1)
            background-color rgba(20, 30, 48, 0.1)
            vertical-align middle
            padding 20px 12px

.wish-notif
    color #0f0f0f!important
    span i
