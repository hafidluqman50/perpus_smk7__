#wrap-badges
    position fixed
    bottom 15px
    right 15px
    z-index 999
#drop-badges
    overflow-y auto
    height 40vh
    min-width 250px
    position absolute
    color rgba(0,0,0,0.7)
    display none
    background #fff
    padding 0
    margin 0
    right 0
    bottom 45px
    -webkit-box-shadow: 0 5px 20px 2px rgba(0,0,0,0.1)
    box-shadow: 0 5px 20px 2px rgba(0,0,0,0.1)
    border-radius 4px
    &::-webkit-scrollbar
        width 0.5em
    &::-webkit-scrollbar-thumb
        background-color: #00d1b2
    li
        padding 5px 10px;
#badges
    padding: 10px
    cursor pointer
    background #00d1b2
    border none
    border-radius 50%
    transform-origin center
    transition all 0.6s ease
    &:hover
        transform scale(1.1)
    &:active i
        border none
        outline none
    p
        font-weight 500
        position absolute
        right -5px
        top -5px
        font-size 12px
        background #e74c3c
        padding 3px
        color #fff
        border-radius 50%
    i
        font-size 19px
        color #fff!important
        transform-origin top
        &.ringdong
            -webkit-animation-name: ringdong
            animation-name: ringdong
    &:hover i.animated
                -webkit-backface-visibility: visible
                -ms-backface-visibility: visible
                backface-visibility: visible
                -webkit-animation : ringdong 1s infinite
                -moz-animation : ringdong 1s infinite
                -o-animation : ringdong 1s infinite
                animation : ringdong 1s infinite

@-webkit-keyframes ringdong
    0%
        transform rotate(0deg)
    10%
        transform rotate(10deg)
    20%
        transform rotate(20deg)
    30%
        transform rotate(20deg)
    40%
        transform rotate(10deg)
    50%
        transform rotate(0deg)
    60%
        transform rotate(-10deg)
    70%
        transform rotate(-20deg)
    80%
        transform rotate(-20deg)
    90%
        transform rotate(-10deg)
    100%
