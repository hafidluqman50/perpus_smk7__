
#transaksi
    padding 15px 0
    .aturan
        border 1px solid #00d1b2
        padding 5px 10px
        height 250px
        position relative
        top 0
        bottom 0
        overflow-y scroll
        margin-bottom 10px
        text-align justify
        font-size 14px
        &::-webkit-scrollbar
            background-color lightgrey
            width 0.4em
        &::-webkit-scrollbar-thumb
            background-color #00d1b2
            border-radius 50px

#info-peminjaman
    padding 100px 0

#info-peminjaman > div.container,
#transaksi > div.container
    background-color #fff
    padding 0 20px

#info-peminjaman figure,
#transaksi figure
    width 100%
    height 350px

#info-peminjaman img,
#transaksi img
    width 100%
    height 100%
